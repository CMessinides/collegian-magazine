<li class="search__section" id="staff-results">
  <h3 class="h4">Staff <span class="search__results-count">{{=it.staff.length}}</span></h3>
  <ul class="list">
    {{~it.staff :value:index}}
      <li class="card card--gamma wid-6 sm-wid-4">
        <article class="card__inner">
          <header class="card__header card__region">
            <h4 class="card__title"><a class="link" href="{{=value.url}}">{{=value.title}}</a></h4>
            <p class="card__byline">{{=value.roles[0]}}</p>
          </header>
          <a href="{{=value.url}}" class="card__link"><span class="hidden">Read more about {{=value.title}}</span></a>
        </article>
      </li>
    {{~}}
  </ul>
</li>
